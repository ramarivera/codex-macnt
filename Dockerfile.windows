# Cross-compile Codex Rust CLI for Windows x64 from Linux
# Uses MinGW toolchain targeting x86_64-pc-windows-gnu

FROM rust:1.93-bookworm

# Install MinGW cross-compiler + build deps
RUN apt-get update && apt-get install -y \
    build-essential \
    libssl-dev \
    pkg-config \
    curl \
    wget \
    git \
    jq \
    nodejs \
    npm \
    p7zip-full \
    dmg2img \
    gcc-mingw-w64-x86-64 \
    g++-mingw-w64-x86-64 \
    && rm -rf /var/lib/apt/lists/*

# Add Windows Rust target
RUN rustup target add x86_64-pc-windows-gnu

# Configure cargo for Windows cross-compilation
RUN mkdir -p /root/.cargo && \
    printf '[target.x86_64-pc-windows-gnu]\nlinker = "x86_64-w64-mingw32-gcc"\n' \
    >> /root/.cargo/config.toml

WORKDIR /build

ENTRYPOINT ["bash", "-lc"]
CMD ["echo codex-windows-builder image ready"]
